{
  "name": "angularjs-study-app",
  "version": "1.0.0",
  "description": "Simple app to learn AngularJS",
  "main": "index.ts",
  "scripts": {
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:dev",
    "build:dev": "webpack --config webpack-dev.config.js",
    "prebuild:prd": "npm run clean:prd",
    "build:prd": "webpack --config webpack-prd.config.js",
    "clean:dev": "rimraf .tmp",
    "clean:prd": "rimraf public",
    "start": "npm run serve:dev",
    "serve:dev": "webpack-dev-server --config webpack-dev.config.js",
    "preserve:prd": "npm run build:prd",
    "serve:prd": "http-server",
    "test": "karma start karma.config.js",
    "test:coverage": "remap-istanbul -i build/coverage/coverage.json -o build/coverage/report -t html",
    "test:coveralls": "remap-istanbul -i build/coverage/coverage.json -o build/coverage/lcov.info -t lcovonly",
    "test:coveralls:push": "cat ./build/coverage/lcov.info | ./node_modules/.bin/coveralls",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js"
  },
  "keywords": [
    "study-app"
  ],
  "author": "Nikolay Borzov <nikolay.n.borzov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/angular": "^1.6.39",
    "@types/angular-mocks": "^1.5.11",
    "@types/angular-ui-router": "^1.1.40",
    "@types/core-js": "^0.9.43",
    "@types/jasmine": "^2.8.2",
    "@types/node": "^9.3.0",
    "@types/webpack-env": "^1.13.3",
    "angular-mocks": "^1.6.7",
    "awesome-typescript-loader": "^4.0.1",
    "core-js": "^2.5.3",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.0.6",
    "http-server": "^0.11.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^3.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "ng-annotate-loader": "^0.6.1",
    "node-sass": "^4.7.2",
    "prettier": "^1.11.1",
    "protractor": "^5.3.0",
    "remap-istanbul": "^0.10.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.15",
    "angular": "^1.6.7",
    "bootstrap": "^3.3.7"
  }
}
